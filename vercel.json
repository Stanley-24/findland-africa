{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "https://findland-africa.onrender.com/api/$1" },
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/favicon.ico", "dest": "/favicon.ico" },
    { "src": "/site.webmanifest", "dest": "/site.webmanifest" },
    { "src": "/favicon_io/(.*)", "dest": "/favicon_io/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "REACT_APP_API_URL": "https://findland-africa.onrender.com",
    "REACT_APP_WS_URL": "wss://findland-africa.onrender.com"
  }
}
